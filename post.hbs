{{!< default}}

{{#post}}
  <article class="post-single">
    <header class="post-header">
      <time class="post-meta--date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMMM YYYY"}}</time>

      <a class="post-heading--url" href="{{url}}">
        <h1 class="article-heading">{{title}}</h1>
      </a>

      <div class="post-tags">
        {{#foreach tags}}
          <a href="{{url}}" title="{{name}}" class="{{slug}}">{{name}}</a>
        {{/foreach}}
      </div>
    </header>

    {{#if feature_image}}
      <figure class="post-feature-image" style="background-image: url({{feature_image}})"></figure>
    {{/if}}

    <section class="post-section post-content">
      {{content}}
    </section>

    <section class="post-section post-section--dark post-content">
      {{#author}}
        {{#if profile_image}}
          <figure class="post-author--image" style="background-image: url({{profile_image}})"></figure>
        {{/if}}

        <section class="post-author--content">
          <h4><a href="{{url}}">{{name}}</a></h4>
          {{#if bio}}
            <p>{{bio}}</p>
          {{else}}
            <p>Read <a href="{{url}}">more posts</a> by this author.</p>
          {{/if}}
        </section>
      {{/author}}
    </section>

    <section class="post-section post-content">
      {{#prev_post}}
        <a class="post-navigation--prev btn" href="{{url}}"><i class="fas fa-chevron-left"></i> Previous post</a>
      {{/prev_post}}

      {{#next_post}}
        <a class="post-navigation--next btn" href="{{url}}">Next post <i class="fas fa-chevron-right"></i></a>
      {{/next_post}}
    </section>

    <footer class="post-footer">
      <div id="disqus_thread"></div>
      <script>
       var disqus_config = function () {
         this.page.url = '{{url absolute="true"}}'
         this.page.identifier = "ghost-{{comment_id}}";
       };

       (function() { // DON'T EDIT BELOW THIS LINE
         var d = document, s = d.createElement('script');
         s.src = 'https://supertri.disqus.com/embed.js';
         s.setAttribute('data-timestamp', +new Date());
         (d.head || d.body).appendChild(s);
       })();
      </script>
      <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>

    </footer>
  </article>


{{/post}}
